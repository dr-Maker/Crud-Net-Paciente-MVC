@model Models.PacienteModel

@{
    ViewBag.Title = "Borrar";
    ViewBag.TitlePag = "Borrar Paciente";
    Layout = "~/Views/shared/_plantilla.cshtml";
}


<form id="frm" name="frm" method="post">
    <div class="form-group">
        <label>Id.Paciente</label>
        <input type="text" readonly class="form-control" name="idpaciente" value="@Model.idpaciente"/>
    </div>
    <div class="form-group">
        <label>Nombres</label>
        <input type="text" readonly class="form-control" name="nombres" value="@Model.nombres"/>
    </div>
    <div class="form-group">
        <label>Apellidos</label>
        <input type="text" readonly class="form-control" name="apellidos" value="@Model.apellidos"/>
    </div>
    <div class="form-group">
        <label>Email</label>
        <input type="email" readonly class="form-control" name="email" value="@Model.email"/>
    </div>
    <div class="form-group">
        <label>teléfono</label>
        <input type="number" readonly class="form-control" name="telefono" value="@Model.telefono"/>
    </div>
    <div class="form-group">
        <label>Genero</label>
        <input type="text" readonly class="form-control" name="genero" value="@Model.genero"/>
    </div>
    <div class="form-group">
        <label>Edad</label>
        <input type="number" readonly required class="form-control" name="edad" value="@Model.edad"/>
    </div>

    <div class="form-group">
        <input type="submit" class="btn btn-danger" value="Borrar" />
    </div>
    <p>
        @Html.ActionLink("volver", "Index")
    </p>
</form>
